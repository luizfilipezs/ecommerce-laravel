#catalog-wrapper
  width 80%
  margin 0 auto
  flex-parent(row, wrap, flex-start)

  @media (max-width 1366px)
    width 90%

  @media (max-width 900px)
    width 92%

  @media (max-width 600px)
    width 86%

  .catalog-item
    width 18%
    margin 0 1.5% 3em 1.5%
    padding 2%
    background rgb(250,250,250)
    background -moz-linear-gradient(172deg, rgba(250,250,250,1) 0%, rgba(255,255,255,1) 100%)
    background -webkit-linear-gradient(172deg, rgba(250,250,250,1) 0%, rgba(255,255,255,1) 100%)
    background linear-gradient(172deg, rgba(250,250,250,1) 0%, rgba(255,255,255,1) 100%)
    box-shadow(0 15px 30px 0 rgba(183, 183, 183, .16))
    border-radius(2em)
    transition(200ms)
    cursor pointer
    fadeIn(1s)

    @media (max-width 1200px)
      width 27%
      side-margin = 1.16666666667%
      margin 0 side-margin 2em side-margin

    @media (max-width 768px)
      width 41%
      padding 3%
      side-margin = 1.5%
      margin 0 side-margin 2.5em side-margin

    @media (max-width 600px)
      width 88%
      padding 6%
      margin 0 0 3.5em 0

    &:hover
      box-shadow(0 15px 30px 0 rgba(183, 183, 183, .32))

    .item-img
      width 100%
      height 22em
      border-radius(1.2em)
      object-fit cover

      @media (max-width 1600px)
        height 18em

      @media (max-width 1366px)
        height 16em

      @media (max-width 1200px)
        height 20em

      @media (max-width 600px)
        height 24em

      @media (max-width 375px)
        height 20em

    .stars-group
      width 100%
      margin-top 2.25em
      margin-bottom 2.75em
      flex-parent(row, nowrap, flex-start)

      .star
        flex-basis fb = 2em
        height fb
        margin-right .6em

        @media (max-width 600px)
          flex-basis fb = 1.75em
          height fb
    
    .item-name
    .item-description
      width 100%
      one-line-text()
      font-size 1.65em

    .item-name
      font-weight 800

    .item-description
      margin-top .5em
      font-weight 600
      color rgba(text-color, .83)

.load-more-btn-wrapper
  width 34em
  margin 5em auto 5em auto
  height 9.5em
  display none

  @media (max-width 1200px)
    width 29em
    height 9em
    margin-top 3.4em

  @media (max-width 600px)
    width 22em
    height 6.8em
    margin-top 1.7em

  .load-more-btn
    position absolute
    top 0
    left 0
    z-index 1
    width 100%
    height 85%
    background-color theme-color
    border-radius(2.4em)
    cursor pointer

    .btn-content
      margin-top 9.25%
      font-size 1.7em
      font-weight 900
      letter-spacing .2em
      color reversed-text-color
      text-align center
      text-transform uppercase

      @media (max-width 600px)
        font-weight 700
        text-transform none
        letter-spacing 0

  .btn-blur
    position absolute
    bottom 0
    left 10%
    z-index 0
    width 80%
    height 45%
    background-color theme-color
    filter(blur(11px))
    opacity .5
    transition(.4s)

  .load-more-btn:hover + .btn-blur
    opacity 0
