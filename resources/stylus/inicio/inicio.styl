@import 'first.box'
@import 'presenting.video.wrapper'
@import 'customers.slider'

.home-section-title
  width 100%
  margin-top 3.4em
  margin-bottom 2.5em
  font-size 3.5em
  font-weight 900
  color theme-color
  text-align center

  @media (max-width 600px)
    font-size 2.4em
    margin-top 3.3em
    margin-bottom 1.8em

.advantages-wrapper
  width 80%
  height auto
  margin 0 auto
  flex-parent(row, nowrap, space-between)

  @media (max-width 1366px)
    width 90%

  @media (max-width 900px)
    width 65%
    flex-wrap wrap

  @media (max-width 600px)
    width 70%

  .advantage-box
    flex-basis 16.5%
    height auto

    @media (max-width 900px) and (min-width 601px)
      flex-basis 36%
      
      &:first-child
      &:nth-child(2)
        margin-bottom 6em

    @media (max-width 600px)
      flex-basis 100%

      &:not(:last-child)
        margin-bottom 7em

    .advantage-illustration
      width 100%
      height auto

    .advantage-title
      margin-top .65em
      font-size 2.15em
      font-weight 900
      text-align center

      @media (max-width 1366px)
        font-size 1.8em

      @media (max-width 600px)
        font-size 2.2em

    .advantage-text
      margin-top 1.4em
      font-size 1.6em
      font-weight normal
      line-height 1.4em
      text-align center

      @media (max-width 1366px)
        font-size 1.5em

.last-suggestions-wrapper
  margin 0 auto
  margin-top 13em
  flex-parent(row, wrap, center)

  @media (max-width 1200px)
    width 82%

  @media (max-width 600px)
    margin-top 7.5em

  .suggestion-box
    flex-parent(row, nowrap, space-between)
    align-items center
    height 14em
    padding 0 4.5em 0 4.5em
    border-radius(1.6em)
    background-color rgba(soft-theme-color, .4)
    cursor pointer

    @media (max-width 1600px)
      height 13em
      padding 0 3.75em 0 3.75em

    @media (max-width 1366px)
      height 12em
      padding 0 3.5em 0 3.5em

    @media (min-width 1201px)
      &:first-child
        margin-right 2%
      &:last-child
        margin-left 2%

    @media (max-width 1200px)
      &:first-child
        margin-bottom 3.2em

    @media (max-width 600px)
      &:first-child
        margin-bottom 2.5em

    @media (max-width 600px)
      padding 0 3em 0 3em
      border-radius(2.4em)
      background-color rgba(soft-theme-color, .6)

    .suggestion-text
      margin-top .3em
      font-size 2.6em
      font-weight 800
      color theme-color

      @media (max-width 1600px)
        font-size 2.5em

      @media (max-width 1366px)
        font-size 2.4em

      @media (max-width 600px)
        font-size 1.8em

    .suggestion-illustration
      margin-left 5.5em
      height 80%

      @media (max-width 1600px)
        margin-left 4.25em

      @media (max-width 1600px)
        margin-left 4em

      @media (max-width 600px)
        margin-left 2em