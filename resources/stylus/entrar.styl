update-height(padding-top)
  padding-top padding-top
  min-height calc(100vh - padding-top)

#login-wrapper
  width 100%
  update-height(17em)
  height auto
  flex-parent(row, nowrap, center)
  align-items flex-start

  @media (max-width 1600px)
    update-height(16em)

  @media (max-width 1366px)
    update-height(14em)

  @media (max-width 1366px)
    update-height(14em)

  @media (max-width 600px)
    update-height(6em)

  #login-box
    height auto
    padding 6em 4.5em 6em 4.5em
    border(1px, solid, #ddd)
    border-radius(4em)
    text-align center
    background-color rgba(text-color, .01)

    @media (max-width 600px)
      margin-top 10em
      padding 0
      border-style none
      background-color transparent

    .login-box-title
      font-size 2.75em
      font-weight 800
      color theme-color

    .login-form
      width 35em
      margin-top 4.5em

      .label
        margin-right .75em
        margin-bottom .75em
        font-size 1.7em
        font-weight 600
        color rgba(text-color, .5)

      input[type=checkbox]
        width wth = 14px
        height wth
        margin-top 1em
        margin-bottom 2.5em

      .login-field
        margin-bottom 1em
        padding .9em
        padding-bottom .75em
        border(1px, solid, #ddd)
        border-radius(2em)
        font-size 1.7em
        font-weight 500
        color text-color
        text-align center
        background-color reversed-text-color
      
        &[type=email]
          width calc(100% - 3.2em)

        &[name=nome]
        &[name=sobrenome]
          width calc(70% - 3.2em)

        &[name=cpf]
          width calc(82% - 3.2em)

        &[type=password]
          width calc(92% - 3.2em)

      select
        &.login-field
          padding-left pdn = 1.6em
          padding-right pdn

      .uf-wrapper
        display none

      .validation-error
        margin-top .6em
        margin-bottom 1em
        font-size 1.55em
        font-weight 600
        color orangered

      .forgot-password
        margin-top .6em
        margin-bottom .4em
        font-size 1.55em
        font-weight 800
        color theme-color

      .login-submit
        margin-top 1.8em
        padding .9em 3em .75em 3em
        border-radius(1em)
        font-size 1.7em
        font-weight 700
        color reversed-text-color
        background-color theme-color
        cursor pointer

    .or-option
      margin-top 2.4em
      margin-bottom 1.4em
      font-size 1.55em
      font-weight 500
      color theme-color

    .secondary-option
      font-size 2.1em
      font-weight 800
      color theme-color