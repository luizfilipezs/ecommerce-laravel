@import 'resources'

*
  position relative
  margin 0
  padding 0

  &:focus
  &:active
    outline 0

html
  scroll-behavior smooth

body
  font-family font-family
  font-size 62.5%
  color text-color
  background-color #fcfcfc
  selection-color(theme-color, soft-theme-color)

img
  select(none)

a
  text-decoration none
  color inherit

  &.inner-link
    font-weight 700
    color theme-color

ul
  list-style none

input
textarea
button
select
  border-style none
  font-family font-family
  font-size inherit
  color inherit
  box-shadow(none)
  outline 0
  background-color transparent

select
  -webkit-appearance none
  appearance none
  &::-ms-expand
    display none

main
  width 100%
  height 100vh
  overflow-y auto

  .wrapper-center
  .wrapper-aparted
    width 100%
    height 100vh

  .wrapper-center
    flex-parent(row, wrap, center)
    align-items center

  .wrapper-aparted
    flex-parent(row, wrap, space-between)

  .page-title
    width 17.85em
    margin 4em auto 1em auto
    font-size 4.2em
    font-weight 900
    color theme-color
    text-align center

    @media (max-width 900px)
      width 15.47em

    @media (max-width 768px)
      width 82%
      margin-top 5em
      font-size 2.65em
      font-weight 800

  .opening-page-paragraph
    width 42.85em
    margin 0 auto
    font-size 1.75em
    font-weight 500
    line-height 1.5em
    text-align center

    @media (max-width 900px)
      width 37.13em

    @media (max-width 768px)
      width 82%
      font-size 1.55em

.page-header
  width 80%
  height 4em
  margin 0 auto 6em auto
  flex-parent(row, wrap, flex-start)

  @media (max-width 1366px)
    width 90%

  @media (max-width 900px)
    width 92%

  @media (max-width 600px)
    width 86%
    height auto
    margin-bottom 3em
    justify-content space-between

  .pg-header-option
  .ordering-btn
    height 100%
    font-size 1.5em
    font-weight 700
    flex-parent(row, nowrap, center)
    align-items center
    border-radius(.5em)

    @media (max-width 600px)
      height 2.75em

  .pg-header-option
    margin-left 1.5em
    padding 0 2em 0 2em
    border-width 1px
    border-style solid
    border-color #ddd
    background-color rgba(text-color, .01)

    &.fixed-left
      margin-left 0

    @media (max-width 600px)
      margin-right 0
      padding 0 1.25em 0 1.25em

    &.active-pg-option
      border-color theme-color
      color reversed-text-color
      background-color theme-color

  .ordering-btn
    padding 0 2.2em 0 2.2em
    background-color #f5f5f5
    margin-left auto
    border-style none
    cursor pointer

    @media (max-width 600px)
      width 100%
      margin-top 1.2em
      padding-right 0

@media (max-width 1600px)
  body
    font-size 62%

@media (max-width 1366px)
  body
    font-size 60.5%

@media (max-width 1280px)
  body
    font-size 60%

@media (max-width 768px)
  body
    font-size 57.5%

@media (max-width 600px)
  body
    font-size 60%