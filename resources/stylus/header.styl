#header
  position absolute
  z-index 1000
  top 0
  left 0
  width 80%
  padding 2.7em 10% 1.5em 10%
  flex-parent(row, nowrap, space-between)

  @media (max-width 1366px)
    width 90%
    padding 2.5em 5% 1.4em 5%

  @media (max-width 900px)
    width 92%
    padding 2em 4% 1.1em 4%

  @media (max-width 600px)
    width 86%
    padding 1em 7% 1em 7%

  #header-logo
    flex-basis auto
    height 7em
    cursor pointer

    @media (max-width 600px)
      height 6em
  
  #main-menu
    align-self flex-end
    flex-parent(row, nowrap, flex-start)
    align-items center
    margin-bottom .4em

    @media (max-width 768px)
      margin-bottom 1em

    @media (max-width 600px)
      align-self center
      margin-top 2em

    .main-menu-item
      padding .6em 1.2em .42em 1.2em
      border-radius(2em)
      font-size 1.65em
      font-weight 600
      text-align center

      @media (max-width 900px)
        font-size 1.55em

      @media (max-width 768px)
        padding .5em .8em .35em .8em

      @media (max-width 600px)
        display none
    
    .highlighted-item
      margin-left 1.3em
      padding-left 1.8em
      padding-right 1.8em
      color reversed-text-color
      background-color theme-color
      cursor pointer

      @media (max-width 600px)
        display flex